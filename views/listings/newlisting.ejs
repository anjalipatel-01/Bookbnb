<% layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-2" >
        <form method="POST" action="/listings">
            <br/><br/>
            <h3>Create New listing</h3>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" type="text" placeholder ="Enter title" class="form-control"/>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea  name="listing[description]" type="text" class="form-control" placeholder="Enter description"></textarea>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" type="number" class="form-control"  placeholder ="Enter price"/>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input name="listing[image]" type="text" class="form-control" placeholder ="Enter image URL/link"/>
            </div>
            <div class="row">
            <div class="mb-3 col-md-4">
                <label for="location" class="form-label">Location
                </label>
                <input name="listing[location]" type="text" class="form-control" placeholder ="Enter location"/>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[Country]" type="text" class="form-control" placeholder ="Enter country"/>
            </div>
        </div>
       
            <button class="btn btn-dark add-btn">Add Listing</button>
           <br/><br/>
        </form>
    </div>
</div>
</body>
